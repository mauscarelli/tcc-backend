{
    "compilerOptions": {
      "target": "es2018",                                
      "module": "commonjs",      
      "moduleResolution": "node",                     
      "lib": ["ES2018","ES2018.AsyncIterable"],                                   
      "allowJs": true,                        
      "outDir": "./dist",                              
      "rootDir": "./src",                        
      "removeComments": true,        
      "strict": true,                                 
      "noImplicitAny": true,                  
      "typeRoots": [
          "./node_modules/@types",
          "./src/@types"
      ],                        
      "esModuleInterop": true,                   
      "resolveJsonModule": true,
      "experimentalDecorators": true,              
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,               
      "skipLibCheck": true,                           
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["./src/*"]
      }  
    }
  }
